            "aviUsername": {
              "type": "string"
            },
            "aviController01Ip": {
              "type": "string"
            },
            "aviCertAuthorityChain": {
              "type": "string"
            },
            "aviPasswordBase64": {
              "type": "string"
            },
            "aviCloudName": {
              "type": "string"
            }
          },
          "required": [
            "aviName",
            "aviUsername",
            "aviController01Ip",
            "aviCertAuthorityChain",
            "aviPasswordBase64"
          ]
        },
        "haProxyComponents": {
          "type": "object",
          "properties": {
            "haProxyName": {
              "type": "string"
            },
            "haProxyUsername": {
              "type": "string"
            },
            "haProxyControllerEndpoint": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "haProxyVirtualIpAddressRanges": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "haProxyCertAuthorityChain": {
              "type": "string"
            },
            "haProxyPassword": {
              "type": "string"
            }
