                "flbNetworkName": {
                  "type": "string"
                },
                "flbNetworkPortgroupId": {
                  "type": "string"
                },
                "flbNetworkIpAddressRanges": {
                  "type": "string"
                },
                "flbNetworkGateway": {
                  "type": "string"
                },
                "flbNetworkSubnet": {
                  "type": "string"
                }
              },
              "required": [
                "flbNetworkIpAssignmentMode",
                "flbNetworkName"
              ]
            }
