            "tkgsMgmtNetworkSearchDomains": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "tkgsMgmtNetworkNtpServers": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "tkgsMgmtIpAssignmentMode"
          ]
