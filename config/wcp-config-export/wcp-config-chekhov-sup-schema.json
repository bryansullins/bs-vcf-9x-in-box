          "required": [
            "tkgsClusterDistributedSwitch",
            "tkgsNsxEdgeCluster",
            "tkgsNsxTier0Gateway",
            "tkgsRoutedMode",
            "tkgsNamespaceSubnetPrefix",
            "tkgsNamespaceNetworkCidrs",
            "tkgsIngressCidrs",
            "tkgsEgressCidrs",
            "tkgsWorkloadServiceCidr"
          ]
