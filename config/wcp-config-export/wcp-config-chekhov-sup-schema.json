          "type": "object",
          "properties": {
            "nsxVpcProject": {
              "type": "string"
            },
            "nsxVpcConnectivityProfile": {
              "type": "string"
            },
            "tkgsWorkloadServiceCidr": {
              "type": "string"
            },
            "nsxVpcPrivateCidrs": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "nsxVpcDnsServers": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "nsxNtpDnsServers": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
