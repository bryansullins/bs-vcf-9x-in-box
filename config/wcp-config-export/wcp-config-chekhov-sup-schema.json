            "tkgsIngressCidrs": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "tkgsEgressCidrs": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "tkgsWorkloadDnsServers": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "tkgsWorkloadServiceCidr": {
              "type": "string"
            }
