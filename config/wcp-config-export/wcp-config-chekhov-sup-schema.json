{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vmware.com/schemas/wcp-config-schema.json",
  "title": "Enable WCP workflow model schema",
  "description": "A schema used for the validation of the export model in the Enable WCP workflow",
  "type": "object",
  "properties": {
    "specVersion": {
      "type": "string"
    },
    "supervisorSpec": {
      "type": "object",
      "properties": {
        "supervisorName": {
          "type": "string"
        }
      },
      "required": [
        "supervisorName"
      ]
    },
    "envSpec": {
      "type": "object",
      "properties": {
        "vcenterDetails": {
          "type": "object",
          "properties": {
            "vcenterAddress": {
              "type": "string"
            },
            "vcenterDatacenter": {
              "type": "string"
            },
            "vcenterCluster": {
              "type": "string"
            },
            "vSphereZones": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "vcenterAddress"
          ]
        }
      },
      "required": [
        "vcenterDetails"
      ]
    },
    "tkgsComponentSpec": {
      "type": "object",
      "properties": {
