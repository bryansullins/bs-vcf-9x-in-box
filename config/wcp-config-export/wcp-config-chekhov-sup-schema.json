        "controlPlaneSize": {
          "type": "string"
        },
        "defaultServiceContentLibrary": {
          "type": "string"
        },
        "apiServerDnsNames": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cpvmCount": {
          "type": "number"
        }
      },
      "required": [
        "tkgsMgmtNetworkSpec",
        "tkgsStoragePolicySpec",
        "controlPlaneSize"
      ]
    }
